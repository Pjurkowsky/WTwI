% Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

\definecolor{special}{HTML}{b32216}
\definecolor{gray}{HTML}{f4f4f4}
\definecolor{lightspecial}{HTML}{fbd19f}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=black}

% Headline
\setbeamercolor{headline}{fg=black,bg=gray}
\setbeamercolor{headline rule}{bg=special}

% Block
\setbeamercolor{block title}{fg=special,bg=white}
\setbeamercolor{block separator}{bg=lightspecial}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=special,bg=lightspecial}
\setbeamercolor{block alerted separator}{bg=special}
\setbeamercolor{block alerted body}{fg=special,bg=lightspecial}

% Example Block
\setbeamercolor{block example title}{fg=black,bg=gray}
\setbeamercolor{block example separator}{bg=white}
\setbeamercolor{block example body}{fg=black,bg=gray}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=black}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
